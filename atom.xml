        <content type="html" xml:base="https://jaydatt.me/posts/image-upload-s3/">&lt;span id=&quot;continue-reading&quot;&gt;&lt;&#x2F;span&gt;&lt;h2 id=&quot;why-use-presigned-urls&quot;&gt;Why Use Presigned URLs?&lt;a class=&quot;anchor&quot; aria-hidden=&quot;true&quot; href=&quot;#why-use-presigned-urls&quot; hidden=&quot;&quot;&gt;#&lt;&#x2F;a&gt;
